<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posteos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <div class="card" style="padding: 50px;">
        <div class="card-body">
            <h5 class="card-title">Posteos</h5>
            
            <a type="button" class="btn btn-outline-success" href="/agregar">
                Agregar
            </a>
    
            <table class="table table-success table-striped-columns">
                <thead>
                    <tr>
                        <!--  <th scope="col">ID</th> -->
                        <th scope="col">TÃ­tulo</th>
                        <th scope="col">Posteo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Creado</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach((item) => { %>
                        <tr>
                           <!-- <th scope="row"><%= item.id %></th>  -->
                            <td><%= item.sTitulo %></td>
                            <td><%= item.sPost %></td>
                            <td>
                                <img src="<%= item.sLink %>" width="100px" height="100px">
                            </td>                            
                            <td><%= item.dCreacion %></td>

                            <td>
                                <a type="button" class="btn btn-outline-warning" href="/modificar/<%= item.id %>">
                                    Modificar
                                </a>
                            </td>
                            <td>
                                <a type="button" class="btn btn-outline-danger" href="/eliminar/<%= item.id %>">
                                    Eliminar
                                </a>
                            </td>
                        </tr>  
                    <% }) %>                  
                </tbody>
            </table>

        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
